@model BlogDataResponseModel
@{
    int rowCount = 0;
}

<partial name="_ValidateMessage" />
<p>Page Count : @Model.PageSetting.PageCount</p>
<p>Page Row Count : @Model.PageSetting.PageNo</p>
<table class="table">
    <thead>
        <tr>
            <th>Action</th>
            <th scope="col">No.</th>
            <th scope="col">Title</th>
            <th scope="col">Author</th>
            <th scope="col">Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogDataModel item in Model.Blogs)
        {
            <tr>
                <td>
                    <a href="/Blog/Edit/@item.Blog_Id" class="btn btn-warning">Edit</a>
                    <a href="/Blog/Delete/@item.Blog_Id" class="btn btn-warning">Delete</a>
                    @* <a href="/Blog/Edit?blogId=@item.Blog_Id" class="btn btn-warning">Edit</a> *@
                </td>
                <th scope="row">@(++rowCount)</th>
                <td>@item.Blog_Title</td>
                <td>@item.Blog_Author</td>
                <td>@item.Blog_Content</td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_Pagination",Model.PageSetting)