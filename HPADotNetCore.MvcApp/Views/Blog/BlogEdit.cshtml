@model BlogDataModel

<h4>Blog</h4>

<partial name="_ValidateMessage" />

<form method="post" action="/Blog/Update/@Model.Blog_Id">
    <div class="mb-3">
        <label class="form-label">Title</label>
        <input type="text" name="Blog_Title" value="@Model.Blog_Title" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Author</label>
        <input type="text" name="Blog_Author" value="@Model.Blog_Author" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Content</label>
        <input type="text" name="Blog_Content" value="@Model.Blog_Content" class="form-control">
    </div>
    <button type="button" class="btn btn-secondary">Back</button>
    <button type="submit" class="btn btn-success">Update</button>
</form>
